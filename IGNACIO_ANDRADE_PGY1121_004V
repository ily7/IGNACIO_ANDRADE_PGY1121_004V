        "import numpy as np\n",
        "letras = [\"A\", \"B\", \"C\", \"D\"]\n",
        "edificio = [[\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"],\n",
        "            [\"*\", \"*\", \"*\", \"*\"]]\n",
        "\n",
        "clientes = []\n",
        "\n",
        "\n",
        "while True:\n",
        "    tipo = input(\"BIENVENIDO A MI CASA FELIZ \\n ¿Qué desea? \\n 1.Comprar \\n 2.Ver departamentos disponibles \\n 3.Ver listado de compradores \\n 4.Mostrar ventas totales \\n 5.Salir \\n\")\n",
        "\n",
        "    if tipo == \"1\":\n",
        "      print(\"COMPRAR\")\n",
        "      print(\"     \", end=\"\")\n",
        "      for letra in letras:\n",
        "          print(f\"{letra} \", end=\"\")\n",
        "      print()\n",
        "      for i in range(len(edificio) - 1, -1, -1):\n",
        "          print(f\"{i+1:2d}   \", end=\"\")\n",
        "          for j in range(len(edificio[i])):\n",
        "              print(f\"{edificio[i][j]} \", end=\"\")\n",
        "          print()\n",
        "      comprar = input(\"Los valores son: \\n A:3.800 UF \\n B:3.000 UF \\n C:2.800 UF \\n D:3.500 UF \\n¿Qué piso desea comprar?\")\n",
        "\n",
        "      piso_letra = comprar.upper()\n",
        "      piso = int(piso_letra[:-1]) - 1\n",
        "      letra = piso_letra[-1]\n",
        "      letra_index = letras.index(letra)\n",
        "\n",
        "      if edificio[piso][letra_index] == \"X\":\n",
        "          print(\"Departamento no disponible\")\n",
        "          continue\n",
        "      else:\n",
        "          rut = input(\"Ingrese su RUT: \")\n",
        "          edificio[piso][letra_index] = \"X\"\n",
        "          clientes.append((rut, comprar))\n",
        "          print(\"DEPARTAMENTO COMPRADO EXITOSAMENTE\")\n",
        "\n",
        "\n",
        "    elif tipo == \"2\":\n",
        "        print(\"VER DEPARTAMENTOS DISPONIBLES:\")\n",
        "        print(\"     \", end=\"\")\n",
        "        for letra in letras:\n",
        "            print(f\"{letra} \", end=\"\")\n",
        "        print()\n",
        "        for i in range(len(edificio) - 1, -1, -1):\n",
        "            print(f\"{i+1:2d}   \", end=\"\")\n",
        "            for j in range(len(edificio[i])):\n",
        "                print(f\"{edificio[i][j]} \", end=\"\")\n",
        "            print()\n",
        "\n",
        "    elif tipo == \"3\":\n",
        "      print(\"VER LISTADO DE COMPRADORES :\")\n",
        "      sorted_clientes = sorted(clientes, key=lambda x: x[0])\n",
        "      for cliente in sorted_clientes:\n",
        "          rut = cliente[0]\n",
        "          departamento = cliente[1]\n",
        "          estado = \"VENDIDO\"\n",
        "          piso_letra = departamento.upper()\n",
        "          piso = int(piso_letra[:-1]) - 1\n",
        "          letra = piso_letra[-1]\n",
        "          letra_index = letras.index(letra)\n",
        "          print(f\"RUT: {rut}, DEPARTAMENTO: {departamento} ESTADO: {estado}\")\n",
        "    elif tipo == \"4\":\n",
        "      print(\"VER TOTAL DE DINERO POR TIPO DE DEPARTAMENTO Y TOTAL GENERAL:\")\n",
        "      total_dinero_tipo = {}\n",
        "      total_general_arrendar = 0\n",
        "      total_general_comprar = 0\n",
        "\n",
        "      for departamento in letras:\n",
        "          total_departamento = 0\n",
        "\n",
        "          for cliente in clientes:\n",
        "              _, depto = cliente\n",
        "              if depto[-1] == departamento:\n",
        "                  total_departamento += 1\n",
        "\n",
        "          total_dinero_tipo[departamento] = total_departamento\n",
        "\n",
        "      for departamento, cantidad in total_dinero_tipo.items():\n",
        "\n",
        "          precio_comprar = 0\n",
        "          if departamento == \"A\":\n",
        "\n",
        "              precio_comprar = 3800\n",
        "          elif departamento == \"B\":\n",
        "\n",
        "              precio_comprar = 3000\n",
        "          elif departamento == \"C\":\n",
        "\n",
        "              precio_comprar = 2800\n",
        "          elif departamento == \"D\":\n",
        "\n",
        "              precio_comprar = 3500\n",
        "\n",
        "\n",
        "          total_dinero_comprar = cantidad * precio_comprar\n",
        "\n",
        "          total_general_comprar += total_dinero_comprar\n",
        "\n",
        "\n",
        "          print(f\"Tipo: {departamento}, Cantidad: {cantidad}, Monto total : {total_dinero_comprar} UF\")\n",
        "\n",
        "\n",
        "      print(f\"Total general : {total_general_comprar} UF\")\n",
        "\n",
        "    elif tipo==\"5\":\n",
        "      print(\"ADIOS \\n Ignacio Andrade \\n 13-07-2023\")\n",
        "      break\n"
      ]
    }
